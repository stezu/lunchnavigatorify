.site-header
	cf()
	background rgba(255, 255, 255, 0.8)
	box-shadow 0 0 5px rgba(0, 0, 0, 0.3)
	left 0
	padding 5px 0
	position fixed
	top 0
	width 100%

	&__logo
		float left
		opacity 0.6

	&__account
		float right
		text-align right

		&__name
			float left
			margin 6px 15px 0
			opacity 0.6
			text-align right
			text-transform uppercase

			&--first,
			&--last
				display block

			&--first
				font-size 1.6em

		&__avatar
			border 1px solid rgba(0, 0, 0, 0.4)
			float left
			margin-bottom -30px
			width 75px
